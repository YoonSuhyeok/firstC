<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.androidtown.test2.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/re_process"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text_bagic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:orientation="horizontal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/re_process" />
    <GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        android:orientation="horizontal"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.100000024"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_bagic">

        <Button
            android:id="@+id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="1dp"
            android:onClick="onClick"
            android:text="1" />
        <Button
            android:id="@+id/button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:onClick="onClick"/>
        <Button
            android:text="+"
            android:id="@+id/button_plus"/>
        <Button
            android:id="@+id/button_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:onClick="onClick"/>
        <Button
            android:text="5"
            android:id="@+id/button_5"
            android:onClick="onClick"/>
        <Button
            android:text="6"
            android:id="@+id/button_6"
            android:onClick="onClick"/>
        <Button
            android:text="-"
            android:id="@+id/button_sub"/>
        <Button
            android:text="7"
            android:id="@+id/button_7"
            android:onClick="onClick"/>
        <Button
            android:text="8"
            android:id="@+id/button_8"
            android:onClick="onClick"/>
        <Button
            android:text="9"
            android:id="@+id/button_9"
            android:onClick="onClick"/>
        <Button
            android:text="*"
            android:id="@+id/button_muti"/>

        <Button
            android:id="@+id/button_reset"
            android:text="C" />
        <Button
            android:text="0"
            android:id="@+id/button_0"
            android:onClick="onClick"/>
        <Button
            android:text="="
            android:id="@+id/button_result"/>
        <Button
            android:text="/"
            android:id="@+id/button_div"/>
    </GridLayout>

</android.support.constraint.ConstraintLayout>
